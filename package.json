{
  "name": "kindle-news-assistant",
  "version": "1.0.0",
  "scripts": {
    "install": "pip install -r requirements.txt",
    "lint": "concurrently --kill-others-on-fail \"npm:lint:py\" \"npm:lint:types\" \"npm:lint:docs\"",
    "lint:py": "pylint main.py kindle_news_assistant/*.py kindle_news_assistant/**/*.py",
    "lint:types": "mypy main.py kindle_news_assistant/*.py kindle_news_assistant/**/*.py",
    "lint:docs": "pydocstyle main.py kindle_news_assistant/*.py kindle_news_assistant/**/*.py",
    "format": "black main.py kindle_news_assistant/*.py kindle_news_assistant/**/*.py"
  },
  "repository": "https://github.com/jdtzmn/kindle-news-assistant",
  "author": "jdtzmn <jdtzmn@gmail.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml}": "prettier --write",
    "*.py": [
      "black",
      "pylint",
      "mypy",
      "pydocstyle"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2"
  }
}
